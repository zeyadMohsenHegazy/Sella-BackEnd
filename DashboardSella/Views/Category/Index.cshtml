@model IEnumerable<Sella_DashBoard.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category Section</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr class="table-primary">
            <th class="h3">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="h3">
                @Html.DisplayNameFor(model => model.Discreption)
            </th>
            <th class="h3">
                Index
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="h4">
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td class="h4">
                @Html.DisplayFor(modelItem => item.Discreption)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.CategoryID  },new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id=item.CategoryID }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.CategoryID},new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
