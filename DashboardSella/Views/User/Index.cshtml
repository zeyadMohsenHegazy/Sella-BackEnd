@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

<h2>User List</h2>

<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Create User</a>

<table class="table">
    <thead>
        <tr>
            
            <th>User Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
              
                <td>@user.UserName</td>
                <td>@user.Email</td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" >Delete</a>
                    <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Reset Password</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>