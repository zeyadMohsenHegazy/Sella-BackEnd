@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Users";
}



<h2>User List</h2>

<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Create User</a>

            <table class="table table-bordered table-hover table-striped mt-2">
                <thead>
                    <tr class="table-success">
            
                        <th class="h3">User Name</th>
                        <th class="h3">Role</th>
                        <th class="h3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
              
                            <td class="h5">@user.UserName</td>
                            <td class="h5">@user.Email</td>
                            <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                                    <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-warning">Reset Password</a>
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>

  